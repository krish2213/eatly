<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script>
        const mapToken = '<%-process.env.MAPTILER_API_KEY%>';
        const foodzone = <%-JSON.stringify(foodzone)%>;
    </script>

    <div class="mx-auto justify-content-center">
        <div class="col-12 col-md-6 offset-md-3 mb-3" id="overview-section">
            <div id="carouselIndicators" class="carousel slide" data-bs-ride="carousel">
                <% if (foodzone.images && foodzone.images.length> 1) { %>
                    <div class="carousel-indicators">
                        <% foodzone.images.forEach((img, i)=> { %>
                            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="<%= i %>"
                                class="<%= i === 0 ? 'active' : '' %>" aria-current="<%= i === 0 ? 'true' : 'false' %>"
                                aria-label="Slide <%= i + 1 %>"></button>
                            <% }) %>
                    </div>
                    <% } %>

                        <div class="carousel-inner">
                            <% foodzone.images.forEach((img, i)=> {
                                const isActive = (i === 0) ? 'active' : '';
                                const parts = img.url.split('/upload/');
                                %>

                                <% if (parts.length < 2) { %>
                                    <div class="carousel-item <%= isActive %>">
                                        <img src="/images/placeholder.jpeg" class="w-100"
                                            style="width: 500px; height: 300px;"
                                            alt="No image available for <%= foodzone.name %>">
                                    </div>
                                    <% } else { %>
                                        <% const
                                            transformedUrl=`${parts[0]}/upload/w_500,h_300,c_fill,q_auto,f_auto,dpr_auto/${parts[1]}`;
                                            %>
                                            <div class="carousel-item <%= isActive %>">
                                                <img crossorigin="anonymous" src="<%= transformedUrl %>"
                                                    class="d-block w-100" alt="<%= foodzone.name %> Image <%= i + 1 %>">
                                            </div>
                                            <% } %>

                                                <% }) %>
                        </div>

                        <% if (foodzone.images && foodzone.images.length> 1) { %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="container">
                            <h5 class="card-title mb-1">
                                <%= foodzone.name %>
                            </h5>
                            <div></div>
                            <p class="card-text text-muted mb-1 mt-1">
                                <%= foodzone.location %>
                            </p>

                            <% if (foodzone.reviews.length> 0) { %>
                                <div class="text-dark mt-1">
                                    <%= foodzone.avgRating.toFixed(1) %>
                                        <i class="fa-solid fa-star text-warning"></i>
                                        (<%= foodzone.reviews.length %> Reviews)
                                </div>
                                <% } else { %>
                                    <div class="text-muted mt-1">No Reviews Yet</div>
                                    <% } %>
                        </div>
                        <div class="ms-auto">
                        <button class="btn btn-outline-dark d-flex gap-2 align-items-center"
                            onclick="shareFoodzone('<%= foodzone.name %>', '<%= foodzone.location %>')">
                            <i class="fa-solid fa-share-from-square"></i>
                            <span>Share</span>
                        </button>
                        </div>

                    </div>


                    <div class="d-flex flex-column gap-0">
                        <hr class="mb-0">
                        <div class="d-flex gap-5 justify-content-center">
                            <a href="#overview-section" class="mb-0 fs-5 active-nav-item text-dark">Overview</a>
                            <a href="#map-section" class="mb-0 fs-5 text-decoration-none text-dark">Map</a>
                            <a href="#review-section" class="mb-0 fs-5 text-decoration-none text-dark">Reviews</a>
                        </div>
                        <hr class="mt-0">
                    </div>

                    <p class="card-text"><i class="fa-solid fa-indian-rupee-sign text-success"></i> Range around ~<%=
                            foodzone.avgPrice %> INR </p>
                    <p class="card-text">
                        <%const desc=foodzone.description%>
                            <%const generatedIndex=desc.indexOf('(auto-generated content)')%>
                                <%if(generatedIndex!==-1){%>
                                    <p>
                                        <%=desc.slice(0,generatedIndex)%>
                                            <span class="text-muted">
                                                <%=desc.slice(generatedIndex)%>
                                            </span>
                                    </p>
                                    <%}else{%>
                                        <p>
                                            <%= desc %>
                                        </p>
                                        <%}%>
                    </p>
                    <% if(currentUser && foodzone.author && currentUser._id.equals(foodzone.author._id)){ %>
                        <div>
                            <a href="/foodzones/<%= foodzone.id %>/edit" class="btn btn-secondary"><i
                                    class="fa-solid fa-pen"></i> Edit Foodzone</a>
                            <form class="d-inline" action="/foodzones/<%= foodzone._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger"> <i class="fa-solid fa-trash"></i> Delete
                                    Foodzone</button>
                            </form>
                        </div>
                        <% } %>
                </div>
                <div class="card-footer text-muted">
                    Created by <a href="/user/<%= foodzone.author._id %>" class="text-decoration-none text-dark">@<%=
                            foodzone.author.username %></a> on <%=foodzone.date%>
                </div>
            </div>
            <div id="map-section">

                <div id="map" style="width: 100%; height: 400px;" class="mx-auto"></div>
                <h3 class="text-center text-muted mt-4">
                    <%=foodzone.name%>
                </h3>
                <div class="d-flex justify-content-center mt-4 mb-4">
                    <a href="https://www.google.com/maps/dir/?api=1&destination=<%= encodeURIComponent(foodzone.name + ', ' + foodzone.location) %>"
                        target="_blank" class="btn btn-dark"> Get Directions on Google Maps
                    </a>
                </div>

            </div>


            <div id="review-section" class="mt-3">
                <% if(currentUser){ %>
                    <form action="/foodzones/<%= foodzone.id %>/reviews" method="POST"
                        class="mx-auto mb-3 validated-form" novalidate>
                        <h3>Leave a Review</h3>
                        <fieldset class="starability-growRotate mt-3">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>

                        <div class="mb-2">
                            <label for="body" class="form-label">Review</label>
                            <textarea name="review[body]" id="body" rows="4" class="form-control"
                                required><%= reviewBody %></textarea>
                            <div class="invalid-feedback">
                                You cannot leave an empty review !
                            </div>
                        </div>
                        <button class="btn btn-dark">Submit</button>
                    </form>
                    <% } %>

                        <h4>Reviews</h4>
                        <% if (foodzone.reviews && foodzone.reviews.length> 0) { %>
                            <% foodzone.reviews.forEach(review=> { %>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center gap-1">
                                            <img src="<%= review.author.picture.url %>" alt="" class="rounded-circle"
                                                style="height: 50px; width: 50px;">

                                            <p class="card-text text-muted mb-0" style="position: relative; ">
                                                <% if (review.author && review.author._id) { %>
                                                    <a href="/user/<%= review.author._id %>"
                                                        class="text-decoration-none text-dark">@<%=
                                                            review.author.username %>
                                                    </a>
                                                    <% if(foodzone.author &&
                                                        review.author._id.equals(foodzone.author._id)){ %>
                                                        <span class="badge bg-secondary ms-1">Author</span>
                                                        <% } %>
                                                            <% } else { %>
                                                                @Anonymous <% } %>
                                            </p>
                                        </div>
                                        <div class="card-text">
                                            <div class="starability-result small-stars"
                                                data-rating="<%= review.rating %>">
                                                Rated : <%= review.rating %> Out Of 5
                                            </div>
                                            <p>
                                                <%= review.body %>
                                            </p>
                                        </div>


                                        <% if(currentUser && review.author && (currentUser._id.equals(review.author._id)
                                            || (foodzone.author && currentUser._id.equals(foodzone.author._id)))){ %>
                                            <form
                                                action="/foodzones/<%= foodzone.id %>/reviews/<%= review.id %>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i>
                                                    Delete Review</button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p class="text-muted">No reviews yet. Be the first to leave one!</p>
                                        <% } %>
            </div>

        </div>
    </div>

    <script src="/javascripts/showPageMap.js"></script>
    <script src="/javascripts/shareZone.js"></script>